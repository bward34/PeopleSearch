@model IEnumerable<PeopleSearch.Models.People>

@{
    ViewData["Title"] = "People List";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {
      
    });</script>

<h1>People List</h1>

<p>
    <a asp-action="Create">Add New Person</a>
</p>
<form asp-controller="People" asp-action="Index">
    <p>
        Search People: <input type="text" name="SearchName">
        <input id="SearchBtn" type="submit" value="Search" />
    </p>
</form>

<div id="Loader">
    <img id="editableimage2" width="150" height="150" style="display:block; margin-left:auto; margin-right:auto; margin-top:100px" src="http://cdn.lowgif.com/full/d9675675623d5f27-loading-gif-transparent-background-loading-gif.gif" border="0" alt="Loading Gif Transparent Background Loading Gif" />
    <h2 style="text-align:center">Searching...</h2>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Age
            </th>
            <th>
                Email
            </th>
            <th>
                Address
            </th>
            <th>
                Interest
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div style="height:50px; width:50px">
                        <img src=@item.PictureUrl width="100%" alt="Profile Picture">
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Interest)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
